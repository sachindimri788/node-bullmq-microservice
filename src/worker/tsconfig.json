{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/**/*.ts"]
}
